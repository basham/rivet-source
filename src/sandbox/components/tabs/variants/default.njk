<button data-add-tab class="rvt-button rvt-m-top-xl">Add tab</button>
<button data-remove-tab class="rvt-button rvt-button--danger rvt-m-left-sm">Remove tab two</button>
<button data-activate-named-tab class="rvt-button rvt-m-left-sm">Activate tab four by ID</button>
<button data-activate-indexed-tab class="rvt-button rvt-m-left-sm">Activate tab one by index</button>
<button data-remove-indexed-tab class="rvt-button rvt-button--danger rvt-m-left-sm">Remove tab three by index</button>

<script>
  const tabs = document.querySelector('[data-rvt-tabs]')

  document.querySelector('[data-add-tab]').addEventListener('click', event => {
    const addedTab = tabs.addTab('New tab')

    addedTab.panel.innerHTML = `<h2>This is a new tab</h2><p>It's pretty great!</p>`
  })

  document.querySelector('[data-remove-tab]').addEventListener('click', event => {
    tabs.removeTab('remove-me')

    event.target.disabled = true
  })

  document.querySelector('[data-activate-named-tab]').addEventListener('click', event => {
    tabs.activateTab('tab-four')
  })

  document.querySelector('[data-activate-indexed-tab]').addEventListener('click', event => {
    tabs.activateTab(0)
  })

  document.querySelector('[data-remove-indexed-tab]').addEventListener('click', event => {
    tabs.removeTab(2)

    event.target.disabled = true
  })

  document.addEventListener('rvtTabAdded', event => console.log(event))
  document.addEventListener('rvtTabRemoved', event => console.log(event))
</script>