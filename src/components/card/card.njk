<div class="rvt-card{% if classes %} {{ classes }}{% endif %}">
  {% if image %}
  <div class="rvt-card__image">
    <img src="{{ image }}" alt="" loading="lazy">
  </div>
  {% endif %}
  <div class="rvt-card__body">
    {% if eyebrow %}
    <div class="rvt-card__eyebrow">{{ eyebrow }}</div>
    {% endif %}
    <h2 class="rvt-card__title">
      <a href="{% if link %}{{ link }}{% else %}#{% endif %}">{{ title }}</a>
    </h2>
    {% if content %}
    <div class="rvt-card__content [ rvt-flow ]">
      {{ content | safe }}
    </div>
    {% endif %}
    {% if meta %}
    <div class="rvt-card__meta">
      {{ meta | safe }}
    </div>
    {% endif %}
  </div>
</div>