<label for="textarea-{{ id }}" class="rvt-label">Textarea</label>
<textarea id="textarea-{{ id }}" class="rvt-textarea{% if class %} rvt-validation-{{ class }}{%- endif %}" {{ modifier }}></textarea>
{% if alert %}
  {% set variant = "@alert-inline" %}
  {% if alertVariant %}
    {% set variant = (variant + alertVariant) %}
  {% endif %}
  {% render variant, {type: class, message: warning}, true %}
{% endif %}