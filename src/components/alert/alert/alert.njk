<div class="rvt-alert rvt-alert--{{ type }}" role="alertdialog" aria-labelledby="{{ id }}-alert-title">
    <h1 class="rvt-alert__title" id="{{ id }}-alert-title">{{ title }}</h1>
    <p class="rvt-alert__message">{{ message }}</p>
    {% render "@includes--alert-close-button" %}
</div>
<script>
  const close{{ type }}Element = document.querySelectorAll('[aria-labelledby]');
  const new{{ type }}Alert = new Rivet.Alert(close{{type}}Element);
</script>