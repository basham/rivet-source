<div class="rvt-alert rvt-alert--{{ type }}" role="alertdialog" aria-labelledby="{{ id }}-alert-title">
    <h1 class="rvt-alert__title" id="{{ id }}-alert-title">{{ title }}</h1>
    <p class="rvt-alert__message">{{ message }}</p>
    {% render "@includes--alert-close-button" %}
</div>
<script>
  let close{{ type }}Element = document.querySelectorAll('[data-alert-close]');
  let parent{{ type }}Elements = [];
  close{{ type }}Element.forEach((item) => {
    const parent = item.parentElement;
    parent{{ type }}Elements.push(parent);
  });
  const new{{ type }}Alert = new Rivet.Alert(parent{{ type }}Elements);
</script>