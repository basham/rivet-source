<header class="rvt-header" role="banner">
    <a class="rvt-skip-link" href="#main-content">Skip to content</a>
    <!-- Trident -->
    <div class="rvt-header__trident">
        {{> @includes--trident }}
    </div>
    <!-- App title -->
    <span class="rvt-header__title">
        <a href="#0">Application Title</a>
    </span>
     {{> @includes--header-controls }}
     {{> @includes--drawer }}
</header>

<!-- Skip link demo only -->
<main id="main-content" role="main">
    <!-- Main application content... -->
    <div class="ts-46 text-bold">
        <img src="https://www.fillmurray.com/g/400/400" alt="Bill Murray's face">
    </div>
    <style scoped>
        main {
            height: 600px;
            transition: all .3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        img {
            display: block;
            opacity: 0;
        }

        main:target img {
            opacity: 1;
        }

        main:target {
            animation-name: skip-animation;
            animation-duration: 1s;
        }

        main > div {
            color: #fff;
        }

        @keyframes skip-animation {
            0% {
                background-color: #fff;
            }

            50% {
                background-color: #990000;
            }

            100% {
                background-color: #fff;
            }
        }
    </style>
</main>
