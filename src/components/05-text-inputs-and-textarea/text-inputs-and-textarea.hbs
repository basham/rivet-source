<form style="max-width: 36em;">
    <fieldset class="m-bottom-xxl">
        <legend class="sr-only">Text input</legend>
        <label for="demo-1">Text Input</label>
        <input type="text" id="demo-1" class="m-bottom-md">

        <label for="demo-2">Text Input (disabled)</label>
        <input type="text" id="demo-2" class="m-bottom-md" disabled>

        <div class="input-error">
            <label for="error-1">Text input error</label>
            <input type="text" id="error-1" aria-describedby="unique-id-for-input-error" aria-invalid="true" />
            <div class="alert-inline m-top-sm" role="alert" id="unique-id-for-input-error">
                <p class="alert-inline__message">An error message for a text input</p>
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend class="sr-only">Textarea</legend>
        <label for="demo-3">Textarea</label>
        <textarea id="demo-3" class="m-bottom-md"></textarea>

        <label for="demo-4">Textarea (disabled)</label>
        <textarea id="demo-4" class="m-bottom-md" disabled></textarea>
        <div class="input-error m-bottom-sm">
            <label for="error-2">Textarea error</label>
            <textarea id="error-2" aria-describedby="unique-id-for-textarea-error" aria-invalid="true"></textarea>
            <div class="alert-inline m-top-sm" role="alert" id="unique-id-for-textarea-error">
                <p class="alert-inline__message">An error message for a textarea</p>
            </div>
        </div>
    </fieldset>
</form>
