            <button class="rvt-button rvt-button--link">Submit</button>
          </form> #}
        </div>
      </div>
      <div class="rvt-hero__stage">
        {# <iframe style="width: 100%; aspect-ratio: 16 / 9;" width="560" height="315" src="https://www.youtube.com/embed/x0UkZq2VtGk" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> #}
        <img src="{{ image.url }}" alt="">
        <div class="rvt-hero__image-caption">{{ image.caption }}</div>
      </div>
    </div>
  </div>
</div>