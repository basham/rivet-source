{% include "@header-system-main-nav" %}
<!-- This can be any container you want or no container? -->
<main class="rvt-layout__wrapper rvt-layout__wrapper--details {{ siteContainer }}">
  <div class="rvt-layout__sidebar" id="section-nav">
    {% render "@sidenav" %}
  </div>
  <div class="rvt-layout__content">
    {% include "@page-intro-partial" %}

    <div class="rvt-border-top rvt-p-top-xl rvt-m-top-xl">
      <div class="rvt-row rvt-row--loose">
        {% for article in articles.slice(0,9) %}
        <div class="rvt-cols-6-lg [ rvt-flex rvt-m-bottom-xxl ]">
          {% render "@card", {
            image: article.image,
            eyebrow: article.eyebrow,
            title: article.title,
            content: article.content,
            classes: "rvt-card--clickable",
            meta: article.meta,
            link: "/components/preview/generic-details-single-column"
          } %}
        </div>
        {% endfor %}
      </div>
      {% render "@pagination", { modifier: "center" }, true %}
    </div>
      
  </div>
</main>
{% include "@footer-system" %}