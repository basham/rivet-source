{% include "@header-system-main-nav" %}
<main class="rvt-grow-1">
  {%- set heroActions -%}
  <a class="rvt-button rvt-button--link" href="#">Read more about this</a>
  <a class="rvt-button rvt-button--plain" href="#">Also this action</a>
  {%- endset -%}
  
  {% render "@hero-area", {
    actions: heroActions
  }, true %}
  
  <div class="rvt-p-tb-xl rvt-p-tb-xxl-md-up">
    <div class="rvt-border-bottom rvt-border-top">  
      <div class="{{ siteContainer }}">
        {% render "@stat-group", true %}
      </div>
    </div>
    <div class="{{ siteContainer }}">
      <p class="rvt-ts-14 rvt-p-top-xs rvt-color-black-500">Notes about the stats</p>
    </div>
  </div>
  
  <div class="{{ siteContainer }} rvt-p-tb-xl rvt-p-tb-3-x-md-up">  
    {% render "@billboard", {
      classes: 'rvt-billboard--reverse'
    }, true %}
  </div>
  
  <div class="{{ siteContainer }} rvt-p-tb-xl rvt-p-tb-3-x-md-up">
    {% render "@billboard" %}
  </div>
  
  <div class="rvt-p-tb-xxl rvt-p-top-3-x-md-up rvt-p-bottom-4-x-md-up">
    <div class="{{ siteContainer }}">
      {# Pass this markup into the "image" key below to see the version with an image #}
      {%- set quoteImage -%}
        <div class="rvt-avatar rvt-avatar--md">
          <img src="https://www.fillmurray.com/200/200" alt="" class="rvt-avatar__image">
        </div>
      {%- endset -%}
      
      {% render "@quote", {
        image: null
      }, true %}
    </div>
  </div>
  
  <div class="rvt-bg-black-000 rvt-p-tb-xxl rvt-p-tb-3-x-md-up">  
    <div class="{{ siteContainer }}">
      {% render "@billboard", {
        title: 'Billboard title',
        classes: 'rvt-billboard--center'
      } %}
      <div class="rvt-row rvt-row--loose">
        {% for card in cards %}
        <div class="rvt-cols-4-md [ rvt-flex rvt-m-top-lg rvt-m-top-xxl-md-up ]">
          {% render "@card", {
            title: card.title,
            eyebrow: card.eyebrow,
            content: card.content,
            classes: 'rvt-card--raised'
          }, true %}
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</main>
{% include "@footer-system" %}
