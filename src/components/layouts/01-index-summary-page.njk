{% include "@header-system-main-nav" %}
<main class="rvt-grow-1">
  {% include "@hero-area" %}

  <div class="rvt-p-tb-xxl">
    <div class="{{ siteContainer }}">
      {% include "@stat" %}
    </div>
  </div>

  <div class="{{ siteContainer }} rvt-p-tb-lg rvt-p-tb-3-x-md-up">  
    {% render "@billboard", { reverse: true }, true %}
  </div>
  <div class="{{ siteContainer }} rvt-p-tb-lg rvt-p-tb-3-x-md-up">
    {% render "@billboard" %}
  </div>
  <div class="rvt-bg-black-000 rvt-p-tb-xxl rvt-p-tb-3-x-md-up">  
    <div class="{{ siteContainer }}">
      <div class="rvt-billboard rvt-billboard--center">
        <div class="rvt-billboard__image">
          <img src="https://www.fillmurray.com/1200/800" alt="">
        </div>
        <div class="rvt-billboard__body">
          <h2 class="rvt-billboard__title">Billboard title</h2>
        </div>
      </div>
      <div class="rvt-row rvt-row--loose">
        {% for card in cards %}
        <div class="rvt-cols-4-md [ rvt-flex rvt-m-top-lg rvt-m-top-xxl-md-up ]">
          {% render "@card", {
            title: card.title,
            eyebrow: card.eyebrow,
            content: card.content
          }, true %}
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</main>
{% include "@footer-system" %}
