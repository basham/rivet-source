            <td><button class="rvt-button button--danger rvt-button--danger-active">Button</button></td>
            <td><button class="rvt-button button--danger" disabled>Button</button></td>
        </tr>
        <tr>
            <th scope="row">Danger secondary</th>
            <td><button class="rvt-button rvt-button--danger-secondary">Button</button></td>
            <td><button class="rvt-button rvt-button--danger-secondary rvt-button--danger-secondary-hover">Button</button></td>
            <td><button class="rvt-button rvt-button--danger-secondary rvt-button--danger-secondary-focus">Button</button></td>
            <td><button class="rvt-button rvt-button--danger-secondary rvt-button--danger-secondary-active">Button</button></td>
            <td><button class="rvt-button rvt-button--danger-secondary" disabled>Button</button></td>
