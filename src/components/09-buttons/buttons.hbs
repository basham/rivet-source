<table class="table-plain">
    <caption class="sr-only">Button examples table</caption>
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Default</th>
            <th scope="col">Hover</th>
            <th scope="col">Focus</th>
            <th scope="col">Active</th>
            <th scope="col">Disabled</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">Primary</th>
            <td><button class="button">Button</button></td>
            <td><button class="button-hover">Button</button></td>
            <td><button class="button-focus">Button</button></td>
            <td><button class="button-active">Button</button></td>
            <td><button class="button-active" disabled>Button</button></td>
        </tr>
        <tr>
            <th scope="row">Secondary</th>
            <td><button class="button button--secondary">Button</button></td>
            <td><button class="button button--secondary button--secondary-hover">Button</button></td>
            <td><button class="button--secondary button--secondary-focus">Button</button></td>
            <td><button class="button--secondary button--secondary-active">Button</button></td>
            <td><button class="button--secondary button--secondary-active" disabled>Button</button></td>
        </tr>
        <tr>
            <th scope="row">Success</th>
            <td><button class="button button--success">Button</button></td>
            <td><button class="button button--success button--success-hover">Button</button></td>
            <td><button class="button--success button--success-focus">Button</button></td>
            <td><button class="button--success button--success-active">Button</button></td>
            <td><button class="button--success button--success-active" disabled>Button</button></td>
        </tr>
        <tr>
            <th scope="row">Success secondary</th>
            <td><button class="button button--success-secondary">Button</button></td>
            <td><button class="button button--success-secondary button--success-secondary-hover">Button</button></td>
            <td><button class="button--success-secondary button--success-secondary-focus">Button</button></td>
            <td><button class="button--success-secondary button--success-secondary-active">Button</button></td>
            <td><button class="button--success-secondary button--success-secondary-active" disabled>Button</button></td>
        </tr>
        <tr>
            <th scope="row">Danger</th>
            <td><button class="button button--danger">Button</button></td>
            <td><button class="button button--danger button--danger-hover">Button</button></td>
            <td><button class="button--danger button--danger-focus">Button</button></td>
            <td><button class="button--danger button--danger-active">Button</button></td>
            <td><button class="button--danger button--danger-active" disabled>Button</button></td>
        </tr>
        <tr>
            <th scope="row">Danger secondary</th>
            <td><button class="button button--danger-secondary">Button</button></td>
            <td><button class="button button--danger-secondary button--danger-secondary-hover">Button</button></td>
            <td><button class="button--danger-secondary button--danger-secondary-focus">Button</button></td>
            <td><button class="button--danger-secondary button--danger-secondary-active">Button</button></td>
            <td><button class="button--danger-secondary button--danger-secondary-active" disabled>Button</button></td>
        </tr>
        <tr>
            <th scope="row">Plain button</th>
            <td><button class="button button--plain">Button</button></td>
            <td><button class="button button--plain button--plain-hover">Button</button></td>
            <td><button class="button--plain button--plain-focus">Button</button></td>
            <td><button class="button--plain button--plain-active">Button</button></td>
            <td><button class="button--plain button--plain-active" disabled>Button</button></td>
        </tr>
        <tr>
            <th scope="row">Small button</th>
            <td><button class="button button--small">Button</button></td>
            <td><button class="button button--small button-hover">Button</button></td>
            <td><button class="button--small button--small-focus">Button</button></td>
            <td><button class="button--small button--small-active">Button</button></td>
            <td><button class="button--small button--small-active" disabled>Button</button></td>
        </tr>
        <tr>
            <th scope="row">Small secondary button</th>
            <td><button class="button button--secondary button--small">Button</button></td>
            <td><button class="button button--secondary button--small button--secondary-hover">Button</button></td>
            <td><button class="button--small button--secondary button--small-focus">Button</button></td>
            <td><button class="button--small button--secondary button--small-active">Button</button></td>
            <td><button class="button--small button--secondary button--small-active" disabled>Button</button></td>
        </tr>
    </tbody>
</table>
