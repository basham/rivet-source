<div class="rvt-timeline rvt-timeline--center">
  {% set cls = cycler("", " rvt-timeline__item--right") %}
  {% for item in timeline_items %}
  <div class="rvt-timeline__row">
    <div class="rvt-timeline__item{{ cls.next() }}">
      <div class="rvt-timeline__marker" aria-hidden="true">
      </div>
      <div class="rvt-timeline__content">
        <h2 class="rvt-timeline__heading">{{ item.heading }}</h2>
        <span class="rvt-timeline__date">{{ item.label }}</span>
        <p>{{ item.content }}</p>
      </div>
    </div>
  </div>
  {% endfor %}
</div>