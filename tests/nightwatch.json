{
    "src_folders" : ["tests/components"],
    "output_folder" : "tests/reports",
    "custom_commands_path" : "",
    "custom_assertions_path" : "",
    "page_objects_path" : "",
    "globals_path" : "",

    "selenium" : {
        "start_process" : true,
        "start_session": true,
        "server_path" : "tests/selenium-server-standalone-3.4.0.jar",
        "log_path" : "tests/logs",
        "port" : 4444,
        "cli_args" : {
            "webdriver.gecko.driver" : "tests/geckodriver"
        }
    },

    "test_settings" : {
        "default" : {
            "launch_url" : "http://localhost:3000",
            "selenium_port"  : 4444,
            "selenium_host"  : "localhost",
            "silent": true,
            "screenshots" : {
                "enabled" : true,
                "path" : "tests/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "firefox",
                "marionette": true,
                "javascriptEnabled": true
            }
        }
    }
}