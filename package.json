    "eslint-plugin-prettier": "^3.1.2",
    "gulp": "^4.0.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-header": "^1.8.9",
    "gulp-postcss": "^7.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^4.0.2",
    "gulp-strip-comments": "^2.5.2",
    "gulp-stylelint": "^9.0.0",
    "gulp-terser": "^1.2.0",
    "node-sass": "^4.13.1",
    "pixelmatch": "^4.0.2",
    "pngjs": "^3.3.1",
    "postcss": "^7.0.21",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.19.1",
    "rollup": "^1.26.5",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-eslint": "^7.0.0",
    "sass": "^1.25.0",
    "start-server-and-test": "^1.10.6",
    "style-dictionary": "^2.8.3",
    "stylelint": "^10.0.1",
    "stylelint-config-rivet": "^1.0.0",
    "stylelint-scss": "^3.14.2"
  },
